{
    "name": "ssh521/laravel-file-manager",
    "description": "A simple and elegant file manager for Laravel applications with drag & drop upload, folder management, and file preview capabilities.",
    "keywords": [
        "laravel",
        "file-manager",
        "file-upload",
        "storage",
        "admin",
        "files"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ssh521",
            "email": "ssh521@naver.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ssh521\\LaravelFileManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ssh521\\LaravelFileManager\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ssh521\\LaravelFileManager\\FileManagerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}